@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}


@model SiemensECommerce.UI.Models.VM.ProductListVM;


<form action="/AdminProduct/Add" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Categories</label>
        <select class="form-control" name="CategoryId">
            @foreach (var item in Model.categories)
            {
                <option name="CategoryId" value="@item.Id">@item.Name</option>
            }
        </select>

    </div>
    <div class="form-group">
        <label>Name:</label>
        <input type="text" name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Main Image</label>
        <input type="file" accept=".jpeg, .jpg, .png" name="productImage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <input type="text" name="Description" class="form-control" />
    </div>
      <div class="form-group">
          <label>Brands</label>
        <select class="form-control" name="BrandId">
            @foreach (var item in Model.brands)
            {
                <option name="BrandId" value="@item.Id">@item.Name</option>
            }
        </select>

    </div>
      <div class="form-group">
        <label>Suppliers</label>
        <select class="form-control" name="SupplierId">
            @foreach (var item in Model.suppliers)
            {
                <option name="SupplierId" value="@item.Id">@item.CompanyName  @item.ContactName</option>
            }
        </select>

    </div>

    <div class="form-group">
        <label>UnitPrice</label>
        <input type="text" name="UnitPrice" class="form-control" />
    </div>

    <div>
        <button class="btn btn-primary">Add</button>
    </div>

</form>