@{
    Layout = "~/Views/Shared/Site/SiteLayout.cshtml";
}

@model SiemensECommerce.UI.Models.VM.WebUserVM

    <form action="/Register/add" method = "post">

          @Html.ValidationSummary()

    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(q => q.Name, new {@class = "form-control"})
    </div>
      <div class="form-group">
        <label>Surname:</label>
        @Html.TextBoxFor(q => q.SurName, new {@class = "form-control"})
    </div>
     <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(q => q.Email, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label>Password:</label>
        @Html.PasswordFor(q => q.Password, new {@class = "form-control"})
    </div>

        <div class="form-group">
        <label>Confirm Password:</label>
        @Html.PasswordFor(q => q.ConfirmPassword, new {@class = "form-control"})
    </div>
      <div class="form-group">
        <label>Phone Number:</label>
        @Html.TextBoxFor(q => q.PhoneNumber, new {@class = "form-control"})
    </div>
    <div>
        <button class="btn btn-success">Register</button>
    </div>

    </form>