@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

@model Brand

<form action='/AdminBrand/Add' method='post' enctype="multipart/form-data">

     @Html.ValidationSummary()
    
     <div class="form-group">
        <label> Name: </label>
        @Html.TextBoxFor(q => q.Name, new{ @class="form-control" })
    </div>
     <div class="form-group">
        <label> Country: </label>
        @Html.TextBoxFor(q => q.Country, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label> Address: </label>
        @Html.TextBoxFor(q => q.Address, new{ @class="form-control" })
    </div>
   
     <div class="form-group">
        <label>Logo Image:</label>
        <input type="file" accept=".jpeg, .jpg, .png" name="logoImage" class="form-control" />
    </div>
    <div>
      <button class="btn btn-success">Add</button>
    </div>

</form>
