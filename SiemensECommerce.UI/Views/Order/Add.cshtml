@{
    Layout = "~/Views/Shared/Site/SiteLayout.cshtml";
}

@model SiemensECommerce.UI.Models.VM.OrderVM

    <form action="/Order/OrderAdd" method = "post">

          @Html.ValidationSummary()

    <div class="form-group">
        <label>Adress:</label>
        @Html.TextBoxFor(q => q.Adress, new {@class = "form-control"})
    </div>
      <div class="form-group">
        <label>Phone:</label>
        @Html.TextBoxFor(q => q.WebUser.PhoneNumber, new {@class = "form-control"})
    </div>
    
    <div class="form-group">
        <label>FirstName:</label>
        @Html.TextBoxFor(q => q.WebUser.Name, new {@class = "form-control"})
    </div>

        <div class="form-group">
        <label>LastName:</label>
        @Html.TextBoxFor(q => q.WebUser.SurName, new {@class = "form-control"})
    </div>
      <div class="form-group">
        <label>EMail:</label>
        @Html.TextBoxFor(q => q.WebUser.Email, new {@class = "form-control"})
    </div>
    <div>
        <button class="btn btn-danger">Save</button>
    </div>

    </form>