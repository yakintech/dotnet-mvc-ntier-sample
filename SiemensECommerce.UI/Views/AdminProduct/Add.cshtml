@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}


@model List<Category>

<form action="/AdminProduct/Add" method="post">

    <div class="form-group">

        <select>
            @foreach (var item in Model)
            {
            <option>@item.Name</option>
            }
        </select>

    </div>
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" />
    </div>

</form>