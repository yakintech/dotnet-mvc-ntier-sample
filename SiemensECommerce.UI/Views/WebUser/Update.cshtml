@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

@model WebUser


<form action='/WebUser/Update' method='post'>

    @Html.HiddenFor(q => q.Id)
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(q => q.Name, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>SurName:</label>
        @Html.TextBoxFor(q => q.SurName, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(q => q.Email, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>Password:</label>
        @Html.TextBoxFor(q => q.Password, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>PhoneNumber:</label>
        @Html.TextBoxFor(q => q.PhoneNumber, new{ @class="form-control" })
    </div>
    <div>
        <button type="submit">Update</button>
    </div>
</form>