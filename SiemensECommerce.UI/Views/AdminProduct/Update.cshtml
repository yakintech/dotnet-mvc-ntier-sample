@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

@model  Product


<form action='/AdminProduct/Update' method='post'>

    @Html.HiddenFor(q => q.Id)
    <div class="form-group">
        <label> Name:</label>
        @Html.TextBoxFor(q => q.Name, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>Description:</label>
        @Html.TextBoxFor(q => q.Description, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>MainImage:</label>
        @Html.TextBoxFor(q => q.MainImage, new{ @class="form-control" })
    </div>
    <div class="form-group">
        <label>UnitPrice:</label>
        @Html.TextBoxFor(q => q.UnitPrice, new{ @class="form-control" })
    </div>
   
    <div>
        <button class="btn btn-success" type="submit">Update</button>
    </div>
</form>